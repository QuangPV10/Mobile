<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"

    tools:context=".Controller.Admin_Near">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_avatar"
            android:src="@drawable/ic_person"></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee"
            android:gravity="center"
            android:text="Quản lý gần tôi"
            android:textColor="#FF3D00"
            android:textSize="30dp"></TextView>
        <Button
            android:id="@+id/btnThemDiaChiAdmin"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="#fff"
            android:drawableLeft="@android:drawable/star_big_on"
            android:text="Thêm địa chỉ quán">
        </Button>

        <ProgressBar
            android:id="@+id/progressBarAdminNear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
        </ProgressBar>

        <ListView
            android:id="@+id/lstNear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>


    </LinearLayout>


</LinearLayout>