<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee"
            android:text="Viết bình luận"
            android:textColor="#fff"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/txtDangBinhLuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/bungee"
            android:padding="5dp"
            android:text="Đăng"
            android:textColor="#fff"
            android:textSize="20dp" />

    </Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/txtTenQuanAn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gogi house"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDiaChiQuanAn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="323 Tran Hung dao" />

    </LinearLayout>

    <EditText
        android:id="@+id/edtTieuDeBinhLuan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFF"
        android:hint="Tiêu đề ( không bắt buộc )"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <EditText
        android:id="@+id/edtDiemBinhLuan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFF"
        android:hint="Đánh giá điểm"
        android:inputType="number"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <EditText
        android:id="@+id/edtNoiDungBinhLuan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="top"
        android:hint="Viết trên 100 từ, đúng chính tả, ngôn từ văn hóa, không spam ... để được điểm thưởng"
        android:textSize="12sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerChonHinhBinhLuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <ImageButton
            android:id="@+id/btnChonHinh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_photo_camera_black_24dp" />
    </LinearLayout>

</LinearLayout>