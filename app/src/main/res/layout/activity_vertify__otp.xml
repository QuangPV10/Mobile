<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    tools:context=".Controller.Vertify_OTP">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:text="@string/otp_code"
            android:textAllCaps="true"
            android:textSize="100sp"></TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee"
            android:layout_gravity="center"
            android:text="Vertification"
            android:textColor="@color/colorAccent"
            android:textAllCaps="true"
            android:textSize="30sp"></TextView>

        <TextView
            android:id="@+id/sdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee"
            android:layout_gravity="center"
            android:text="0975390766"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="true"
            android:textSize="30sp"></TextView>

        <com.chaos.view.PinView
            android:id="@+id/pin_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:itemCount="6"
            app:itemWidth="50dp"
            app:itemHeight="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            app:lineColor="@color/colorPrimaryDark"
            android:itemBackground="@color/common_google_signin_btn_text_dark_disabled"
            style="@style/PinWidget.PinView"
            android:inputType="number"
            android:cursorVisible="true"
            app:hideLineWhenFilled="true"
            app:itemRadius="5dp"
            app:cursorColor="@color/colorPrimaryDark"
            ></com.chaos.view.PinView>


        <Button
            android:id="@+id/btnVertify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="#FFEA00"
            android:layout_marginTop="20dp"
            android:text="VERTIFY CODE"
            android:textColor="#F50057">

        </Button>


    </LinearLayout>
</LinearLayout>